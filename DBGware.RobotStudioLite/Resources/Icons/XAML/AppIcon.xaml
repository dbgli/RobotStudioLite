<UserControl
    x:Class="DBGware.RobotStudioLite.Resources.Icons.XAML.AppIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DBGware.RobotStudioLite.Resources.Icons.XAML"
    mc:Ignorable="d"
    d:DesignHeight="768" d:DesignWidth="768">

    <!-- 投影和线性渐变 -->
    <UserControl.Resources>

        <DropShadowEffect x:Key="Filter12721" ShadowDepth="0" BlurRadius="20" Opacity="0.5" />

        <GradientStopCollection x:Key="CommonGradientStops">
            <GradientStop Color="#FFAE7FE2" Offset="0" />
            <GradientStop Color="#FF9A70D4" Offset="1" />
        </GradientStopCollection>

        <LinearGradientBrush
            x:Key="LinearGradient1948"
            GradientStops="{StaticResource CommonGradientStops}"
            MappingMode="Absolute"
            StartPoint="660.71631,260.25952" EndPoint="660.71631,341.84665" />
        <LinearGradientBrush
            x:Key="LinearGradient5683"
            GradientStops="{StaticResource CommonGradientStops}"
            MappingMode="Absolute"
            StartPoint="492.22278,105.5" EndPoint="492.22278,327.01358" />
        <LinearGradientBrush
            x:Key="LinearGradient5691"
            GradientStops="{StaticResource CommonGradientStops}"
            MappingMode="Absolute"
            StartPoint="395.55817,35.894947" EndPoint="395.55817,199.06918" />
        <LinearGradientBrush
            x:Key="LinearGradient5699"
            GradientStops="{StaticResource CommonGradientStops}"
            MappingMode="Absolute"
            StartPoint="139.13438,165.93008" EndPoint="139.13438,546.01959" />
        <LinearGradientBrush
            x:Key="LinearGradient5707"
            GradientStops="{StaticResource CommonGradientStops}"
            MappingMode="Absolute"
            StartPoint="252.78072,566.21124" EndPoint="252.78072,607.00482" />
        <LinearGradientBrush
            x:Key="LinearGradient5715"
            GradientStops="{StaticResource CommonGradientStops}"
            MappingMode="Absolute"
            StartPoint="252.78072,484.62411" EndPoint="252.78072,732.10504" />

    </UserControl.Resources>

    <!-- 动画效果 -->
    <!-- 不要设置From属性，否则动画未完成时再触发会跳变到From位置 -->
    <!-- 不要用AutoReverse，因为它不等人 -->
    <UserControl.Triggers>

        <!-- 抬起机械臂 -->
        <EventTrigger RoutedEvent="MouseEnter">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="canvasRotateTransform"
                            Storyboard.TargetProperty="Angle"
                            To="-16"
                            Duration="0:0:0.25"
                            AccelerationRatio="0.25"
                            DecelerationRatio="0.25" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>

        <!-- 放下机械臂 -->
        <EventTrigger RoutedEvent="MouseLeave">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="canvasRotateTransform"
                            Storyboard.TargetProperty="Angle"
                            To="0"
                            Duration="0:0:0.25"
                            AccelerationRatio="0.25"
                            DecelerationRatio="0.25" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>

    </UserControl.Triggers>

    <!-- 图标 -->
    <!-- 必须设置背景色，把UserControl撑起来，否则鼠标的进入和退出事件只会在非透明区域触发 -->
    <!-- 颜色的十六进制简写形式：当每个通道的两位数值相同时，可以只用一个数值表示。例：#FF22AA99可以简写成#F2A9 -->
    <Canvas Width="768" Height="768" Background="#0000" Effect="{StaticResource Filter12721}">

        <!-- 机械臂 -->
        <Canvas>
            <Canvas.RenderTransform>
                <!-- 旋转中心点 -->
                <RotateTransform x:Name="canvasRotateTransform" CenterX="252.78072" CenterY="607.00482" />
            </Canvas.RenderTransform>
            <Path Fill="{StaticResource LinearGradient1948}" Data="M 660.71632 260.25953 C 638.21799 260.25953 619.92275 278.55477 619.92275 301.05309 619.92275 323.55142 638.21867 341.84665 660.71632 341.84665 683.21464 341.84665 701.50988 323.55142 701.50988 301.05309 701.50988 278.55476 683.21464 260.25953 660.71632 260.25953 Z" />
            <Path Fill="{StaticResource LinearGradient5683}" Data="M 656.656 219.87663 517.14338 109.59395 C 518.80912 135.01786 520.04925 116.27866 492.77467 271.29419 L 583.4098 325.89637 C 580.86837 318.01369 579.1292 309.77204 579.1292 301.05309 579.1292 257.44614 613.578 222.04004 656.656 219.87663 Z" />
