                            Margin="0,0,4,0"
                            VerticalAlignment="Center" />
                        <TextBlock Text="{DynamicResource DominoesWorkstation}" />
                    </StackPanel>
                </TreeViewItem.Header>
                
                <TreeViewItem IsExpanded="True">
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Text="&#xF158;"
                                FontFamily="Segoe Fluent Icons,Segoe MDL2 Assets"
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                Opacity="{Binding ElementName=robotVisibilityMenuItem, Path=IsChecked, Converter={StaticResource BoolToOpacityConverter}}" />
                            <TextBlock Text="{DynamicResource Robot}" />
                        </StackPanel>
                    </TreeViewItem.Header>
                    <TreeViewItem.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                x:Name="robotVisibilityMenuItem"
                                Header="{DynamicResource Visible}"
                                IsCheckable="True"
                                IsChecked="True"
                                Command="{x:Static main:RSLCommands.ToggleModelVisibilityCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                                Tag="{Binding Path=RobotModels}" />
                        </ContextMenu>
                    </TreeViewItem.ContextMenu>
                </TreeViewItem>

