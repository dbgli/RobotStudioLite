<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:DBGware.RobotStudioLite.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <!--  Common Control Styles  -->
        <ResourceDictionary Source="./RSL/Base/ControlsBase.xaml" />
        <!--  Custom Control Styles  -->
        <ResourceDictionary Source="./RSL/CustomChromeWindow.xaml" />
        <ResourceDictionary Source="./RSL/GlyphButton.xaml" />
        <ResourceDictionary Source="./RSL/WindowSystemButton.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="{x:Type ctrls:CustomChromeWindow}"
        BasedOn="{StaticResource CustomChromeWindowBaseStyle}"
        TargetType="{x:Type ctrls:CustomChromeWindow}" />

    <Style
        x:Key="{x:Type ctrls:GlyphButton}"
        BasedOn="{StaticResource GlyphButtonBaseStyle}"
        TargetType="{x:Type ctrls:GlyphButton}" />

    <Style
        x:Key="{x:Type ctrls:WindowSystemButton}"
        BasedOn="{StaticResource WindowSystemButtonBaseStyle}"
        TargetType="{x:Type ctrls:WindowSystemButton}" />

</ResourceDictionary>